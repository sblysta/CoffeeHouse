    <script>
      function buyCoffee() {
        let name = prompt("What is your name?");
        let age = prompt("What is your age?");
        if (age >= 16) {
          alert("Hello! " + name + ", you can drink coffee!");
        } else {
          alert("Oh... " + name + ", you are probably too young for coffee..");
        }
      }
      let coffeeButton = document.querySelector("button");
      coffeeButton.addEventListener("click", buyCoffee);
    </script>
